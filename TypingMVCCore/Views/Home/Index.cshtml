@{
    ViewData["Title"] = "Home Page";
}

<h1>ToDo</h1>
<h3>Press SPACE to start typing, SHIFT to change book and ESC to go to the settings </h3>

<script>
    document.onkeydown = function (event) {
        if (event.keyCode === 32) {
            window.location.href = '@Url.Action("Index", "Typing")';
        }
        if (event.keyCode === 16) {
            window.location.href = '@Url.Action("Index", "Books")';
        }
        if (event.keyCode === 27) {
            window.location.href = '@Url.Action("Settings", "Home")';
        }
    };
</script>
